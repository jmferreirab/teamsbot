{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "text": "Browse",
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Click on a category to view FAQs.",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "$data": "${category}",
            "title": "${name}",
            "data": {
                "categoryChoice": "${name}"
            }
        }
    ]
}
